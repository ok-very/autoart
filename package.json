{
  "name": "autoart",
  "version": "1.0.0",
  "description": "AutoArt Process Management System",
  "private": true,
  "workspaces": [
    "shared",
    "backend",
    "frontend"
  ],
  "scripts": {
    "build:shared": "cd shared && npm run build",
    "build": "npm run build:shared && npm run build:backend",
    "dev": "powershell -ExecutionPolicy Bypass -File scripts/dev.ps1",
    "dev:kill": "powershell -ExecutionPolicy Bypass -File scripts/kill-dev.ps1",
    "backup": "powershell -ExecutionPolicy Bypass -File scripts/backup.ps1",
    "db:verify": "powershell -ExecutionPolicy Bypass -File scripts/db-verify.ps1",
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "migrate": "cd backend && npm run migrate",
    "migrate:down": "cd backend && npm run migrate:down",
    "seed": "cd backend && npm run seed",
    "seed:dev": "cd backend && npm run seed:dev",
    "seed:reset": "cd backend && npm run seed:reset",
    "db:rebuild": "cd backend && npm run db:rebuild",
    "db:reset": "cd backend && npm run db:reset",
    "db:nuke": "cd backend && npm run db:nuke",
    "db:status": "cd backend && npm run db:status",
    "start:backend": "cd backend && npm run dev",
    "start:frontend": "cd frontend && npm run dev",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "keywords": [
    "process-management",
    "workflow",
    "postgres",
    "fastify",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-import-resolver-typescript": "^3.6.3"
  }
}
