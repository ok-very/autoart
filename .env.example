# ===========================================
# AutoArt Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://autoart:password@localhost:5432/autoart
DATABASE_POOL_SIZE=10

# Production Database (for docker-compose.prod.yml)
DB_USER=autoart
DB_PASSWORD=your-secure-password-here

# JWT Configuration
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET=your-jwt-secret-at-least-32-characters-long
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# CORS (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:5173

# Frontend (for production)
VITE_API_URL=http://localhost:3001/api

# AutoHelper (Mail module backend)
VITE_AUTOHELPER_URL=http://localhost:8000

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
