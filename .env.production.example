# ===========================================
# AutoArt Production Configuration
# ===========================================
# For Azure deployment with Entra ID authentication

# Environment
NODE_ENV=production

# Database (Azure PostgreSQL with Entra ID)
# DATABASE_URL is not required when AZURE_AD_USER is set.
DATABASE_POOL_SIZE=10

# Azure Entra ID
# Uses DefaultAzureCredential â€” managed identity in Azure, `az login` locally.
# This user must be granted access in Azure PostgreSQL:
# CREATE ROLE "user@yourfirm.com" WITH LOGIN;
# GRANT ALL ON DATABASE postgres TO "user@yourfirm.com";
AZURE_AD_USER=user@yourfirm.com

# JWT Configuration
JWT_SECRET=generate-with-openssl-rand-base64-64
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Server
PORT=3001
HOST=0.0.0.0

# CORS
CORS_ORIGIN=https://your-production-domain.com

# Frontend
VITE_API_URL=https://your-production-domain.com/api
VITE_AUTOHELPER_URL=https://your-autohelper-domain.com

# OAuth popup origin (must match your frontend URL for postMessage security)
CLIENT_ORIGIN=https://your-production-domain.com

# Google OAuth (optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_REDIRECT_URI=https://your-production-domain.com/api/auth/google/callback

# Microsoft OAuth (optional)
# MICROSOFT_CLIENT_ID=your-microsoft-client-id
# MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
# MICROSOFT_REDIRECT_URI=https://your-production-domain.com/api/auth/microsoft/callback

# Monday.com OAuth (optional - without these, API key auth is used)
# MONDAY_CLIENT_ID=your-monday-client-id
# MONDAY_CLIENT_SECRET=your-monday-client-secret
# MONDAY_REDIRECT_URI=https://your-production-domain.com/api/auth/monday/callback
