{
  "name": "autoart-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "AutoArt Process Management System - Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:down": "tsx src/db/migrate.ts down",
    "seed": "tsx src/db/seeds/run.ts",
    "seed:dev": "tsx src/db/seeds/run.ts --dev",
    "seed:reset": "tsx src/db/seeds/run.ts --reset --dev",
    "db:rebuild": "npm run migrate:down && npm run migrate && npm run seed:dev",
    "db:reset": "npm run db:nuke && npm run migrate && npm run seed:dev",
    "db:nuke": "tsx src/db/nuke.ts",
    "db:repair": "tsx src/db/repair_migrations.ts",
    "db:consolidate": "tsx src/db/consolidate_migrations.ts",
    "db:status": "tsx src/db/status.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@autoart/shared": "workspace:*",
    "@azure/identity": "^4.13.0",
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/sensible": "^6.0.1",
    "@mondaydotcomorg/api": "^12.0.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "fastify": "^5.2.1",
    "fastify-type-provider-zod": "^4.0.0",
    "google-auth-library": "^10.5.0",
    "kysely": "^0.27.4",
    "pg": "^8.12.0",
    "uuid": "^10.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.17.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.18.1",
    "vitest": "^4.0.16"
  }
}
