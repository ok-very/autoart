{
  "name": "autoart",
  "version": "1.0.0",
  "description": "AutoArt Process Management System",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build:shared": "pnpm --filter @autoart/shared build",
    "build": "pnpm build:shared && pnpm build:backend",
    "dev": "bash scripts/dev.sh",
    "dev:kill": "bash scripts/kill-dev.sh",
    "backup": "bash scripts/backup.sh",
    "db:verify": "bash scripts/db-verify.sh",
    "migrate": "pnpm --filter autoart-backend migrate",
    "migrate:down": "pnpm --filter autoart-backend migrate:down",
    "seed": "pnpm --filter autoart-backend seed",
    "seed:dev": "pnpm --filter autoart-backend seed:dev",
    "seed:reset": "pnpm --filter autoart-backend seed:reset",
    "db:rebuild": "pnpm --filter autoart-backend db:rebuild",
    "db:reset": "pnpm --filter autoart-backend db:reset",
    "db:nuke": "pnpm --filter autoart-backend db:nuke",
    "db:status": "pnpm --filter autoart-backend db:status",
    "start:backend": "pnpm --filter autoart-backend dev",
    "start:frontend": "pnpm --filter autoart-frontend dev",
    "start:mail": "pnpm --filter @autoart/mail dev",
    "start:intake": "pnpm --filter autoart-frontend dev:intake",
    "build:backend": "pnpm --filter autoart-backend build",
    "build:frontend": "pnpm --filter autoart-frontend build",
    "build:mail": "pnpm --filter @autoart/mail build",
    "build:intake": "pnpm --filter autoart-frontend build:intake",
    "lint": "eslint frontend/src backend/src shared/src apps/mail/src",
    "lint:fix": "eslint frontend/src backend/src shared/src --fix",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:backend": "pnpm --filter autoart-backend test",
    "test:shared": "pnpm --filter @autoart/shared test",
    "test:coverage": "pnpm --filter autoart-backend test:coverage",
    "test:db": "tsx scripts/test-db-connection.ts",
    "build:all": "pnpm install && pnpm --filter autohelper run install:deps && pnpm build:shared && pnpm -r build",
    "build:all:clean": "pnpm -r exec rm -rf dist && pnpm run build:all",
    "git:stack": "bash scripts/git/stack-pr.sh",
    "git:merge-stack": "bash scripts/git/merge-stack.sh"
  },
  "keywords": [
    "process-management",
    "workflow",
    "postgres",
    "fastify",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "pg": "^8.17.2",
    "typescript-eslint": "^8.46.4"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "dotenv": "^17.2.3",
    "octokit": "^5.0.5",
    "tsx": "^4.21.0"
  }
}