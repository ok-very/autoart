# ===========================================
# AutoArt Production Configuration
# ===========================================
# For Azure deployment with Entra ID authentication

# Environment
NODE_ENV=production

# Database (Azure PostgreSQL with Entra ID)
# The DATABASE_URL is used as fallback; Entra ID token auth takes precedence
DATABASE_URL=postgres://placeholder@autoart.postgres.database.azure.com:5432/postgres?sslmode=require
DATABASE_POOL_SIZE=10

# Azure Entra ID
# This user must be granted access in Azure PostgreSQL:
# CREATE ROLE "user@yourfirm.com" WITH LOGIN;
# GRANT ALL ON DATABASE postgres TO "user@yourfirm.com";
AZURE_AD_USER=user@yourfirm.com

# JWT Configuration
JWT_SECRET=generate-with-openssl-rand-base64-64
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Server
PORT=3001
HOST=0.0.0.0

# CORS
CORS_ORIGIN=https://your-production-domain.com

# Frontend
VITE_API_URL=https://your-production-domain.com/api
VITE_AUTOHELPER_URL=https://your-autohelper-domain.com
