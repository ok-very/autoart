{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "../.eslintrc.json",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json",
    "tsconfigRootDir": "."
  },
  "plugins": ["react", "react-hooks", "@typescript-eslint", "import"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ],
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./src/components",
            "from": "./src/stores",
            "message": "Components should not directly import stores. Use hooks or props."
          },
          {
            "target": "./src/ui",
            "from": "./src/api",
            "message": "UI components should not directly import API. Use hooks or props."
          }
        ]
      }
    ],
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["../../../*", "../../../../*"],
            "message": "Avoid deep relative imports. Use path aliases: @/, @components/, @api/, @stores/"
          },
          {
            "group": ["../../shared/*", "../../../shared/*"],
            "message": "Import from '@autoart/shared' instead of relative path."
          }
        ]
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "./tsconfig.json"
      }
    }
  }
}
